<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_item_article_home_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/image_item_article_home_nav"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/post_cover"/>

        <TextView
            android:id="@+id/txt_item_article_home_nav"
            android:layout_width="match_parent"
            android:layout_height="@dimen/smallEditText_layout_height"
            style="@style/text_view_item_recycler_article_nav"
            android:layout_marginTop="215dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="title of post"
            />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:id="@+id/imageBu_post_article_favorite"
            android:background="@color/white"/>


    </androidx.cardview.widget.CardView>


</RelativeLayout>