<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="@string/contact_us"
            android:textColor="@color/white"
            android:background="@color/darkRed"
            android:gravity="center"
            android:textSize="28sp"
            android:textStyle="bold"
            />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/title_post_marginStart"
            android:id="@+id/img_bu_conact_us_back"
            android:background="@drawable/ic_arrow_back_white"
            android:layout_marginBottom="@dimen/title_post_marginBottom"
            android:foregroundGravity="center"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:elevation="1dp"
            android:text="@string/mobile"
            android:textSize="24sp"
            android:textColor="@color/darkRed"
            android:textStyle="bold"
            android:gravity="center|start"
            />
        <TextView
            android:id="@+id/tv_contact_us_phone_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:textColor="@color/orange"
            android:drawableEnd="@drawable/phone_number"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:elevation="1dp"
            android:text="@string/email"
            android:textSize="24sp"
            android:textColor="@color/darkRed"
            android:textStyle="bold"
            android:gravity="center|start"
            />
        <TextView
            android:id="@+id/tv_contact_us_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:textColor="@color/orange"
            android:drawableEnd="@drawable/email"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#20FFFFFF"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/image_contact_us_facebook"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/facebook"/>

        <ImageView
            android:id="@+id/image_contact_us_instgram"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/instgram"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/image_contact_us_twitter"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/twitter"/>

        <ImageView
            android:id="@+id/image_contact_us_youtube"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/youtube"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_contact_us_title_of_message"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/largeEditText"
        android:layout_marginTop="20dp"
        android:hint="@string/title_of_message"
        android:textColorHint="@color/orange"
        android:textColor="@color/orange"/>


    <EditText
        android:id="@+id/et_contact_us_body_of_message"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        style="@style/largeEditText"
        android:layout_marginTop="20dp"
        android:hint="@string/body_of_message"
        android:textColorHint="@color/orange"
        android:gravity="top|start"
        android:textColor="@color/orange"
        android:backgroundTint="@color/dark_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/smallButton_marginStart"
        android:layout_marginEnd="@dimen/smallButton_marginStart"
        android:background="@drawable/linear_layout_edit_text_container"
        android:layout_marginBottom="10dp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bu_contact_us_send"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/button_send_donation_request"
            />

        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>